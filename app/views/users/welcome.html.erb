<% if flash[:signup_success] %>
    <div class="alert alert-success"><%= flash[:signup_success] %></div>
<% elsif flash[:login_success] %>
    <div class="alert alert-success"><%= flash[:login_success] %></div>
<% end %><br>


  <div class="container">
    <div class="row">
      <div class="col-sm-1.5">
        <img src="<%= current_user.image %>" style="width: 100px">
      </div>
      <div class="col-sm-9">
        <strong><p><%= current_user.username %></p></strong>
        <p><%= current_user.email %></p>
        <p><%= link_to 'Update Profile', edit_user_path(current_user) %></p>
      </div>
    </div>
  </div>

  <div class="container">
    <div class="row justify-content-center">
      <div class="col-4">
        <h1>New Feed</h1>
      </div>
      <div class="col-4">
        <h1>Messages</h1>
      </div>
    </div>
  </div>
