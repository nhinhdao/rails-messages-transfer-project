
<%= form_for @user, method: 'post' do |f|%>
  <% if @user.errors.any? %>
    <div>
      <h4 class="text-danger">Uh oh, something went wrong.</h4>
      <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li class="text-danger"><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <hr>
  <div class="form-row">
    <div class="form-group col-md-5">
      <strong class="<%= 'text-danger' if @user.errors[:username].any? %>"><%= f.label :username%></strong>
      <%= f.text_field :username, class: "form-control" %>
    </div>
    <div class="form-group col-md-5">
      <strong class="<%= 'text-danger' if @user.errors[:email].any? %>"><%= f.label :email%></strong>
      <%= f.text_field :email, class: "form-control" %>
    </div>
    <div class="form-group col-md-5">
      <strong class="<%= 'text-danger' if @user.errors[:password].any? %>"><%= f.label :password%></strong>
      <%= f.text_field :password, class: "form-control" %>
    </div>
    <div class="form-group col-md-5">
      <strong class="<%= 'text-danger' if @user.errors[:password_confirmation].any? %>"><%= f.label :password_confirmation%></strong>
      <%= f.text_field :password_confirmation, class: "form-control" %>
    </div>
  </div>

  <p><%= f.submit%></p>
<% end %>
