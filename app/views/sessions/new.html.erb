
<div class="row justify-content-lg-center">
  <img src="https://i.imgur.com/9OOKn1A.jpg?1" alt="..." class="img-thumbnail">
</div>

<div class="row">
  <div class="col">
    <h1>Log In</h1>

    <% if flash[:notice] %>
        <div class="alert alert-warning"><%= flash[:notice] %></div>
    <% end %><br>

    <%= form_tag login_path, method: "post" do %>
    <%= render 'form' %><br>
    <%= submit_tag "Log In", class: "btn btn-primary" %>
    <% end %>
  </div>
  <div class="col">
    <br><br><br><br>
    <p><strong>Or, <%= link_to('Log in with Facebook!', '/auth/facebook') %></strong></p>
    <p><strong>New User? <%= link_to "Sign Up", signup_path %></strong></p>
  </div>
</div>
