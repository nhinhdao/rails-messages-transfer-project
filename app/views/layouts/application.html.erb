<!DOCTYPE html>
<html>
  <head>
    <title>RailsMessagesTransferProject</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar sticky-top navbar-expand-sm navbar-light" style="background-color: #e3f2fd;">
      <a class="navbar-brand" href="#">The Message Book</a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav mr-auto">
          <% if current_user %>
            <li class="nav-item active">
              <a class="nav-link", href="/">Home</a>
            </li>
            <li class="nav-item">
              <%= link_to "Feeds", posts_path, class: "nav-link" %>
            </li>
            <li class="nav-item">
              <%= link_to "Messages", messages_path, class: "nav-link" %>
            </li>
            <li class="nav-item">
              <%= link_to "Friends", users_path, class: "nav-link" %>
            </li>
            <li class="nav-item">
              <%= link_to "Log Out", logout_path, class: "nav-link" %>
            </li>
          <% else %>
            <li class="nav-item active">
              <p>Hi there. It is nice to see you</p>
            </li>
          <% end %>
        </ul>
      </div>
    </nav>
    <br>
    <%= yield %>
  </body>
</html>
